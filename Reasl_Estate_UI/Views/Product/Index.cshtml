@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>
                                <th scope="col">Günün Fırsatı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.title</td>
                                    <td>@item.city</td>
                                    <td>@item.district</td>
                                    <td>@item.categoryName</td>
                                    <td>@item.price</td>
                                    <td>@item.type</td>
                                    <td><a asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@item.id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a asp-action="UpdateProduct" asp-controller="Product" asp-route-id="@item.id" class="btn btn-outline-warning">Güncelle</a></td>
                                    <td><a asp-action="ProductDetail" asp-controller="Product" asp-route-id="@item.id" class="btn btn-outline-primary">Gör</a></td>
                                    <td>
                                        <a asp-action="ProductDealOfTheDayChange" asp-controller="Product" asp-route-id="@item.id" class="btn btn-outline-@(item.dealOfTheDay ? "secondary" : "warning")">@(item.dealOfTheDay ? "Pasif Yap" : "Aktif Yap")</a>
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-action="CreateProduct" asp-controller="Product" class="btn btn-outline-info">Yeni İlan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>