@model List<ResultPopularLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}
<style>
    img{
        border-radius:50%;
        height:50;
        width:50;
    }
</style>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Popüler Lokasyon Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şehir Adı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><img  src="@item.imageUrl" style="height:50px; width:50px;" /> @item.cityName</td>
                                    <td><a asp-action="DeletePopularLocation" asp-controller="PopularLocation" asp-route-id="@item.id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a asp-action="UpdatePopularLocation" asp-controller="PopularLocation" asp-route-id="@item.id" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-action="CreatePopularLocation" asp-controller="PopularLocation" class="btn btn-outline-primary">Yeni Lokasyon Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>