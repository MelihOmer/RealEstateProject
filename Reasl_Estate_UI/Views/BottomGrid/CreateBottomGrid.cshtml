@model CreateBottomGridDto
@{
    ViewData["Title"] = "CreateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Öne Çıkan Alan Ekle</h6>
                <form method="post">
                    <label>Başlık</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <label>İcon</label>
                    <input type="text" asp-for="icon" class="form-control" />
                    <br />
                    <label>Açıklama</label>
                    <textarea rows="5" asp-for="description" class="form-control"></textarea>
                    <br />
                    <button class="btn btn-primary">Alanı Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
