@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Hizmetler Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Hizmet Başlığı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.name</td>
                                    <td>@(item.status ? "Aktif" : "Pasif")</td>
                                    <td><a asp-action="DeleteService" asp-controller="Service" asp-route-id="@item.id" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a asp-action="UpdateService" asp-controller="Service" asp-route-id="@item.id" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-action="CreateService" asp-controller="Service" class="btn btn-outline-primary">Yeni Hizmet Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>